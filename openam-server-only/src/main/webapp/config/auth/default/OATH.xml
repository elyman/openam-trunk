<!DOCTYPE ModuleProperties PUBLIC "=//iPlanet//Authentication Module Properties XML Interface 1.0 DTD//EN"
        "jar://com/sun/identity/authentication/Auth_Module_Properties.dtd">


<ModuleProperties moduleName="OATH" version="1.0">
    <!-- For determining which we are -->
    <Callbacks length="0" order="1" timeout="120" header="Two Factor Authentication - 2nd factor">
    </Callbacks>

    <!-- For when we're optional -->
    <Callbacks length="2" order="2" timeout="120" header="Two Factor Authentication - 2nd factor">
        <PasswordCallback>
            <Prompt>Enter verification code:</Prompt>
        </PasswordCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value>Submit</Value>
                </OptionValue>
                <OptionValue>
                    <Value>Register device</Value>
                </OptionValue>
                <OptionValue>
                    <Value>Skip 2FA</Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>
    <!-- For when we're not optional -->
    <Callbacks length="2" order="3" timeout="120" header="Two Factor Authentication - 2nd factor">
        <PasswordCallback>
            <Prompt>Enter verification code:</Prompt>
        </PasswordCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value>Submit</Value>
                </OptionValue>
                <OptionValue>
                    <Value>Register device</Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>
    <Callbacks length="3" order="4" timeout="120" header="Register your device with OpenAM">
        <TextOutputCallback>
            Scan the barcode image below with the ForgeRock Authenticator App. Once registered click the button to
            enter your verification code and login.
        </TextOutputCallback>
        <TextOutputCallback messageType="script">PLACEHOLDER</TextOutputCallback>
        <ConfirmationCallback>
            <OptionValues>
                <OptionValue>
                    <Value>Login using verification code</Value>
                </OptionValue>
            </OptionValues>
        </ConfirmationCallback>
    </Callbacks>
</ModuleProperties>
